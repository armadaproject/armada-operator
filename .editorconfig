; https://editorconfig.org/

root = true

[*]
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 150

[Makefile]
indent_style = tab
indent_size = 4

[{*.json,*.yaml}]
indent_size = 2

[*.md]
indent_size = 4
trim_trailing_whitespace = false

eclint_indent_style = unset

[Dockerfile]
indent_size = 4

[{*.yml,*.yaml}]
indent_size = 2
